    <element-processor name="init-pager"
                       class="org.jahia.services.render.scripting.thymeleaf.template.pager.InitPagerElementProcessor"/>
    <element-processor name="remove-pager"
                       class="org.jahia.services.render.scripting.thymeleaf.template.pager.RemovePagerElementProcessor"/>
